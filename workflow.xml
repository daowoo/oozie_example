<workflow-app name='hubble-daily-wf' xmlns='uri:oozie:workflow:0.5'>

<start to='hubble-daily' />
<action name='hubble-daily'>
    <pig>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <prepare>
            <delete path="${output}/${date}"/>
        </prepare>
        <configuration>
            <property>
                <name>oozie.action.sharelib.for.pig</name>
                <value>pig_current</value>
            </property>
            <property>
                <name>oozie.launcher.mapreduce.job.hdfs-servers</name>
                <value>${nameNode}</value>
            </property>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>mapreduce.map.memory.mb</name>
                <value>${mapMemoryMb}</value>
            </property>
            <property>
                <name>mapreduce.reduce.memory.mb</name>
                <value>${reduceMemoryMb}</value>
            </property>
            <property>
                <name>dfs.umaskmode</name>
                <value>${dfs_umaskmode}</value>
            </property>
            <property>
                <name>oozie.launcher.mapreduce.job.acl-view-job</name>
                <value>*</value>
            </property>
            <property>
                <name>mapreduce.job.acl-view-job</name>
                <value>*</value>
            </property>
            <property>
                <name>mapreduce.job.acl-modify-job</name>
                <value>*</value>
            </property>
            <property>
                <name>oozie.launcher.mapreduce.job.acl-modify-job</name>
                <value>*</value>
            </property>
        </configuration>
        <script>${HDFSCodeRoot}/scripts/NfeatureCFAll.pig</script>
        <param>POST_SPAM_PATH=${input}/${date}/{desktop,tablet,mobile}</param>
        <param>OUTPUTROOT=${output}/${date}</param>
        <param>PARALLEL_CNT=${numReducers}</param>
	<file>${HDFSCodeRoot}/scripts/ECParser.py</file>
    </pig>
    <ok to='end' />
    <error to='fail' />
</action>

 <action name="fail" >
   <email xmlns="uri:oozie:email-action:0.1">
     <to>cqye@yahoo-inc.com</to>
     <subject>email notification for hubble daily job failed</subject>
     <body>hubble daily job: failed, job id: ${wf:id()}</body>
   </email>
   <ok to="kill" />
   <error to="kill" />
 </action>

 <kill name="kill">
   <message>Map/Reduce failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
 </kill>

<end name='end'/>
</workflow-app>
